<Window x:Class="PokemonCard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonCard"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">


    <Border BorderBrush="Gray" 
        BorderThickness="1" 
        CornerRadius="12"
        Background="Gray"
        Padding="5"
        Margin="20">
        <Grid Margin="8" Background="LightGray" >


            <!-- Rows for card sections -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- HEADER -->
                <RowDefinition Height="2*"/>
                <!-- PICTURE -->
                <RowDefinition Height="Auto"/>
                <!-- SUB INFO -->
                <RowDefinition Height="*"/>
                <!-- MOVE 1 -->
                <RowDefinition Height="*"/>
                <!-- MOVE 2 -->
                <RowDefinition Height="Auto"/>
                <!-- WEAK/RESIST/RETREAT -->
                <RowDefinition Height="Auto" />
                <!-- FOOTER -->
            </Grid.RowDefinitions>

            <!-- Colums -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>


            <!-- HEADER ROW 0 -->
            <Grid Grid.Row="0" Grid.ColumnSpan="3" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!--Stage box-->
                    <ColumnDefinition Width="Auto"/>
                    <!-- NAME -->
                    <ColumnDefinition Width="*"/>
                    <!-- SPACE -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- HP -->
                    <ColumnDefinition Width="Auto"/>
                    <!--Icon-->
                </Grid.ColumnDefinitions>


                <!--Stage box-->
                <Border Grid.Column="0" CornerRadius="2 0 10 2"  VerticalAlignment="Top" Padding="5 0" Background="Silver"  BorderBrush="Gray" BorderThickness="1" >
                    <TextBlock Text="Basic"  />
                </Border>

                <!-- NAME -->
                <Border Grid.Column="1"  Margin="2" Padding="5">
                    <TextBlock Text="NAME" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>

                <!-- EMPTY SPACE -->
                <Border  Grid.Column="2" BorderBrush="Gray" BorderThickness=" 0 0 3 0" Margin="2" Padding="5" CornerRadius="0 0 35 0">
                    <TextBlock Text="(empty)" HorizontalAlignment="Center" VerticalAlignment="center"/>
                </Border>

                <!-- HP -->
                <Border Grid.Column="3" Margin="2" Padding="5">
                    <TextBlock Text="HP" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <!--Icon-->
                <Border Width="25" Height="30" Grid.Column="4" BorderBrush="Gray" BorderThickness="1" Margin="2" Padding="2"
                        CornerRadius="30" Background="LightGray" >
                    <Border.Effect>
                        <DropShadowEffect Color="Gray" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                    </Border.Effect>
                    <Viewbox Stretch="Uniform">
                        <Polygon Fill="Black"
                        Stroke="Black"
                        StrokeThickness="1"
                        Points="50,0 61,35 98,35 68,57
                         79,91 50,70 21,91 32,57
                         2,35 39,35"/>
                    </Viewbox>
                </Border>
            </Grid>


            <!-- IMAGE ROW 1 -->
            <Border Grid.Row="1" Grid.ColumnSpan="3" Margin="12 6 12 0" BorderBrush="Gray" 
                BorderThickness="2 2 2 0" Background="LightGray" CornerRadius="3"   >
                <!--
             <Rectangle Width="220" Height="220" Fill="DarkGray" HorizontalAlignment="Center"
                       VerticalAlignment="Center"/> -->
                <Image Source="/Images/Eevee3.jpg" Stretch="Fill"/> 
            </Border>

            <!-- SUB INFO ROW 2-->
            <Border Grid.Row="2" Grid.ColumnSpan="3" CornerRadius="10 0 30 10" BorderBrush="Gray" BorderThickness="3" VerticalAlignment="Top" >
                <TextBlock Text="SUB-INFO / NO / POKEMON TYPE / HT WT" TextAlignment="Center"/>
            </Border>

            <Border Grid.Row="3" Grid.RowSpan="2" Grid.ColumnSpan="2"
                Background="Silver"
                    CornerRadius="0 0 0 7"
                Margin="6 0 0 0" Padding="0 30 5 0" >

                <StackPanel>

                    <!-- ATTACK 1 ROW 3 -->
                    <Grid  Grid.Row="3" Grid.ColumnSpan="3" Margin="6 0 0 0"  >
                        <Grid.RowDefinitions >
                            <RowDefinition Height="Auto"/>
                            <!-- ATTACK HEADER -->
                            <RowDefinition Height="Auto"/>
                            <!-- ATTACK DESCRIPTION -->
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- ICON -->
                            <ColumnDefinition Width="*"/>
                            <!-- NAME -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- DAMAGE -->
                        </Grid.ColumnDefinitions>

                        <!-- HEADER ROW -->
                        <Border Width="25" Height="30" Grid.Column="0" Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Margin="2" Padding="2"
                            CornerRadius="30" Background="LightGray">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" BlurRadius="6" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <Viewbox Stretch="Uniform">
                                <Polygon Fill="Black"
                                    Stroke="Black"
                                    StrokeThickness="1"
                                        Points="50,0 61,35 98,35 68,57
                                                79,91 50,70 21,91 32,57
                                                 2,35 39,35"/>
                            </Viewbox>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="1"  Padding="5" Margin="2">
                            <TextBlock Text="ATTACK NAME" TextAlignment="Center"/>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="2"  Padding="5" Margin="2">
                            <TextBlock Text="DMG"/>
                        </Border>


                        <!-- DESCRIPTION ROW -->
                        <Border Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0"  
                            Padding="5" Margin="2">
                            <TextBlock Text="ATTACK DESCRIPTION GOES HERE" TextWrapping="Wrap"/>
                        </Border>

                    </Grid>


                    <!-- ATTACK 2 OSV-->
                    <Grid Grid.Row="4" Grid.ColumnSpan="3" Margin="6 0 0 0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- ATTACK HEADER -->
                            <RowDefinition Height="Auto"/>
                            <!-- ATTACK DESCRIPTION -->
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <!-- ICON -->
                            <ColumnDefinition Width="*"/>
                            <!-- NAME -->
                            <ColumnDefinition Width="Auto"/>
                            <!-- DAMAGE -->
                        </Grid.ColumnDefinitions>

                        <!-- HEADER ROW -->
                        <Border Width="25" Height="30" Grid.Column="0" Grid.Row="0" BorderBrush="Gray" BorderThickness="1" Margin="2" Padding="2"
                            CornerRadius="30" Background="LightGray">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" BlurRadius="6" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <Viewbox Stretch="Uniform">
                                <Polygon Fill="Black" Stroke="Black" StrokeThickness="1"
                                    Points="50,0 61,35 98,35 68,57
                                            79,91 50,70 21,91 32,57
                                            2,35 39,35"/>
                            </Viewbox>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="1"  Padding="5" Margin="2">
                            <TextBlock Text="ATTACK NAME" TextAlignment="Center"/>
                        </Border>

                        <Border Grid.Row="0" Grid.Column="2"  Padding="5" Margin="2">
                            <TextBlock Text="DMG"/>
                        </Border>
                        <!-- DESCRIPTION ROW -->
                        <Border Grid.Row="1" Grid.ColumnSpan="3" Grid.Column="0" 
                                 Padding="5" Margin="2">
                            <TextBlock Text="ATTACK DESCRIPTION GOES HERE  " TextWrapping="Wrap"/>
                        </Border>

                    </Grid>
                </StackPanel>
            </Border>


            <!-- WEAK / RESIST / RETREAT -->
            <Border Grid.Row="5" Grid.ColumnSpan="3" BorderBrush="Gray" BorderThickness="0 2" Margin="  0" >
                <Grid Grid.Row="5" Grid.ColumnSpan="3" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="100*"/>
                        <ColumnDefinition Width="111*"/>
                        <ColumnDefinition Width="111*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" BorderBrush="Gray" BorderThickness=" 0 0 1 0" Padding="5" Margin="2 0" Grid.ColumnSpan="2">
                        <TextBlock Text="WEAKNESS"/>
                    </Border>

                    <Border Grid.Column="2" BorderBrush="Gray" BorderThickness=" 0 0 2 0" CornerRadius=" 0 0 30 0" Padding="5" Margin="2">
                        <TextBlock Text="RESISTANCE"/>
                    </Border>

                    <Border Grid.Column="3" Padding="5" Margin="2,2,2,2">
                        <TextBlock Text="RETREAT"/>
                    </Border>
                </Grid>
            </Border>

            <!-- FOOTER -->
            <Grid Grid.Row="6" Grid.ColumnSpan="3" Margin="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"  Padding="5" Margin="2">
                    <TextBlock FontSize="8" Text="ICON ICON # / SET"/>
                </Border>

                <Border Grid.Column="1"  Padding="5" Margin="2">
                    <TextBlock FontSize="8" Text="COPYWRIGHT TEXT"/>
                </Border>

                <Border Grid.Column="2" Padding="5" Margin="2">
                    <TextBlock FontSize="8" Text="JAYADADA WADADAD NICE" TextWrapping="Wrap"/>
                </Border>

                <!--asdklaökd-->


            </Grid>

        </Grid>
    </Border>
</Window>
